{
	"name": "ruby_dev",
	"chef_type": "role",
	"json_class": "Chef::Role",
	"description": "The role for Ruby development",
	"run_list": [
		"recipe[ruby_build]",
		"recipe[rbenv::system_install]",
		"recipe[postgresql::server]",
		"recipe[chef-webapp::ruby_dev]"
	],
	"override_attributes": {
		"postgresql": {
			"config": {
				"listen_addresses": "*",
				"port":             "5432"
			},
			"pg_hba": [
				{
					"type":   "local",
					"db":     "postgres",
					"user":   "postgres",
					"addr":   "",
					"method": "trust"
				},
				{
					"type":   "host",
					"db":     "all",
					"user":   "all",
					"addr":   "0.0.0.0/0",
					"method": "md5"
				},
				{
					"type":   "host",
					"db":     "all",
					"user":   "all",
					"addr":   "::1/0",
					"method": "md5"
				}
			],
			"password": {
				"postgres": "root"
			}
		}
	}
}